<% include partials/header %>

<h1 class="head">Edit <%= blog.title %></h1>

    <div class="form-container">
        <!--Any changed fiedls will be updated in db entry-->
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <!--*****  NAME SYNTAX ( blog[---] ) USED TO PULL FROM INDIVIDUAL BLOG OBJECTS *****-->
            <!--Blog title-->
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
            <!--Blog image-->
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
            <!--Blog content-->
            <textarea rows="10" cols="50" name="blog[body]" required><%= blog.body %></textarea>
            <input class="btn btn-outline-success" type="submit" id="submit-btn">
        </form>
    </div>


<% include partials/footer %>
